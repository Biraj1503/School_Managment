<%-include('./Partials/header.ejs')%>
<%-include('./Partials/StudentsNavbar.ejs')%>
<h4 style="margin-left:350px;margin-top:10px">Find Your Routine</h4>
	<div class="container mt-3">
			<form action='/routine/showroutine' method="post">
				<div class="row">
					<div class="col-sm-2">
						<div class="form-group">
							<label>Enter Class Name</label>
							<select name='classname' class="form-control">
	                          <option selected>Selected Your Class Name</option>
	                          <option value="6">Class Six</option>
	                          <option value="7">Class Seven</option>
	                          <option value="8">Class Eight</option>
	                          <option value="9">Class Nine</option>
	                          <option value="10">Class Ten</option>
	                      </select>
						</div>
					</div>

					<div class="form-group col-sm-2">
	                    <label for='year' class="text-success"><strong>Session Year</strong></label>
	                   <select name='year' class="form-control">
	                          <option selected>Selected Your Year</option>
	                          <option value=2021>2021</option>
	                          <option value=2022>2022</option>
	                          <option value=2023>2023</option>
	                          <option value=2024>2024</option>
	                      </select>
	                </div>

	                <div class="form-group col-sm-2">
	                      <label for='extram' class="text-danger">Examination Tram</label>
	                      <select name='extram' class="form-control">
	                          <option selected>Selected Your Examination</option>
	                          <option value="First Exam">First Exam</option>
	                          <option value="Second Exam">Second Exam</option>
	                          <option value="Final Exam">Final Exam</option>
	                          <option value="Examination">Class Test</option>
	                      </select>
                  	</div>

                  	<div class="form-group col-sm-2">
						<label>School Name</label>
						<input type="text" name="schoolname" class="form-control" placeholder="Type School Name...">
					</div>

	                <div class="col-sm-2">
	                	<input type="submit" value="Preview" class="btn btn-success btn-bg mt-4">
	                </div>
				</div>
			</form>
				<%if(searchresult){%>
						<div class="mt-3">
							<tr>
								<td><h4>School Name : <%=result.schoolname%></h4></td>
							</tr>
							<tr>
								<td><h4>Class Name : <%=result.classname%></h4></td>
							</tr>

							<tr>
								<td><h4>Year: <%=result.year%></h4></td>
							</tr>

							<tr>
								<td><h4>Publish Time : <%=moment(result.createTime)%></h4></td>
							</tr>		
						</div>
					<%}%>
			<div class="row">
				<div class="col-sm-11 my-3">
					<table class="table table-bordered table-striped table-hover">
						  <thead class="table-light">
						    <tr>
						      <th scope="col">Subject</th>
						      <th scope="col">Date</th>
						      <th scope="col">Day</th>
						      <th scope="col">Time</th>
						    </tr>
						  </thead>
						  <tbody>
						    	<tr>
							    	<td>
							    		<%for(let r of result.subject){%>
							    			<p><%=r.subjectroutin%></p>
							    		<%}%>
							    	</td>
							    	
							    	<td>
							    		<%for(let d of result.date){%>
							    			<p><%=d.routindate%></p>
							    		<%}%>
							    	</td>

							    	<td>
							    		<%for(let dy of result.day){%>
							    			<p><%=dy.routinday%></p>
							    		<%}%>
							    	</td>

							    	<td>
							    		<%for(let t of result.time){%>
							    			<p><%=t.routintime%></p>
							    		<%}%>
							    	</td>
						    	</tr>
						  </tbody>
					</table>
				</div>
			</div>			
		</div>
<%-include('./Partials/footer.ejs')%>
