<%-include('./Partials/header.ejs')%>
<%-include('./Partials/StudentsNavbar.ejs')%>
<div>
	<div class="container my-4">
		<div class="row">
			<div class="col-md-8">
				<div>
				 	<h1>The app is managed by School</h1>
